{% set title = title ?? "" %}

<div>
  <form sprig s-method="post" s-action="entries/save-entry">
    {{ hiddenInput("sectionId", "12") }}
    <div class="flex space-x-4">
      <input type="text"
        id="title"
        name="title"
        value="{{ title }}"
        class="h-12 w-2/3 text-stone-700 rounded-md block w-full rounded-md font-semibold border-white focus:border-red-300 focus:ring focus:ring-red-200 focus:ring-opacity-50" />
      <button type="submit" class="w-1/3 h-12 px-6 rounded-md border border-red-300 uppercase hover:bg-black/10">Add item</button>
      {% if success is defined %}
        <script>
          document.getElementById('title').value = "";
        </script>
      {% endif %}
    </div>
  </form>
</div>
